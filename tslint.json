{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "quotemark": [true, "single"],
        "object-literal-sort-keys": false
    },
    "rules": {
        "quotemark": [true, "single"],
        "trailing-comma": true,
        "space-before-function-paren": true,
        "prefer-const": true,
        "indent": [true, "spaces", 2],
        "object-literal-sort-keys": [true, "shorthand-first"],
        "member-ordering": true
    },
    "rulesDirectory": []
}
